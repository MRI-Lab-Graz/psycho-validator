{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Movie Stimulus Metadata",
  "description": "Schema for movie stimulus metadata with technical and study parameters",
  "type": "object",
  "properties": {
    "_Technical": {
      "type": "object",
      "description": "Technical video properties",
      "properties": {
        "StimulusType": {
          "type": "string",
          "enum": ["Movie"],
          "description": "Must be 'Movie' for movie stimuli"
        },
        "FileFormat": {
          "type": "string",
          "enum": ["mp4", "avi", "mov", "mkv", "wmv", "webm"],
          "description": "Video file format"
        },
        "Resolution": {
          "type": "array",
          "items": { "type": "integer", "minimum": 1 },
          "minItems": 2,
          "maxItems": 2,
          "description": "Video width Ã— height in pixels [width, height]"
        },
        "Duration": {
          "type": "number",
          "minimum": 0,
          "description": "Duration of the movie in seconds"
        },
        "FrameRate": {
          "type": "number",
          "minimum": 0,
          "description": "Frame rate in frames per second"
        },
        "FileSize": {
          "type": "integer",
          "minimum": 0,
          "description": "File size in bytes"
        },
        "VideoCodec": {
          "type": "string",
          "description": "Video codec used (e.g., H.264, H.265, VP9)"
        },
        "AudioCodec": {
          "type": "string",
          "description": "Audio codec used (e.g., AAC, MP3, PCM)"
        },
        "HasAudio": {
          "type": "boolean",
          "description": "Whether the movie contains an audio track"
        },
        "HasSubtitles": {
          "type": "boolean",
          "description": "Whether the movie has embedded subtitles"
        }
      },
      "required": ["StimulusType", "FileFormat", "Resolution", "Duration", "FrameRate", "HasAudio"]
    },
    "_Study": {
      "type": "object",
      "description": "Study-related parameters",
      "properties": {
        "StudyID": {
          "type": "string",
          "description": "Unique identifier for the study this stimulus belongs to"
        },
        "TaskName": {
          "type": "string",
          "description": "Experimental task name"
        },
        "Condition": {
          "type": "string",
          "description": "Experimental condition (e.g., 'control', 'treatment', 'baseline')"
        },
        "StimulusID": {
          "type": "string",
          "description": "Unique ID to cross-reference stimuli with responses"
        },
        "TrialType": {
          "type": "string",
          "enum": ["target", "distractor", "filler", "practice", "catch"],
          "description": "Type of trial this stimulus is used in"
        },
        "ExpectedResponse": {
          "type": "string",
          "enum": ["yes", "no", "left", "right", "keypress", "free_response", "rating", "continuous"],
          "description": "Expected type of participant response"
        },
        "ResponseWindow": {
          "type": "array",
          "items": { "type": "number", "minimum": 0 },
          "minItems": 2,
          "maxItems": 2,
          "description": "Response time window [start_time, end_time] in seconds"
        },
        "ISI": {
          "type": "number",
          "minimum": 0,
          "description": "Inter-stimulus interval in seconds"
        }
      },
      "required": ["StudyID", "TaskName", "StimulusID"]
    },
    "_Categories": {
      "type": "object",
      "description": "Classification and categorization",
      "properties": {
        "PrimaryCategory": {
          "type": "string",
          "enum": ["social_interaction", "nature", "action", "faces", "objects", "abstract", "documentary", "other"],
          "description": "Primary content category"
        },
        "SecondaryCategory": {
          "type": "string",
          "description": "More specific subcategory (e.g., 'conversation', 'landscape', 'sports')"
        },
        "ContentTags": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Searchable tags describing movie content"
        },
        "Language": {
          "type": "string",
          "description": "Language of spoken content (ISO 639-1 code, e.g., 'en', 'de')"
        },
        "StudyDomain": {
          "type": "string",
          "enum": ["cognitive", "social", "clinical", "developmental", "neuroscience", "perception"],
          "description": "Primary research domain"
        },
        "Paradigm": {
          "type": "string",
          "enum": ["attention", "memory", "perception", "emotion", "decision-making", "learning", "social_cognition", "other"],
          "description": "Experimental paradigm"
        },
        "EmotionalValence": {
          "type": "string",
          "enum": ["positive", "negative", "neutral", "mixed"],
          "description": "Emotional valence of the movie stimulus"
        },
        "SocialContent": {
          "type": "boolean",
          "description": "Whether the movie contains social interactions"
        },
        "NumberOfActors": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of visible people/actors in the movie"
        }
      },
      "required": ["PrimaryCategory", "StudyDomain"]
    },
    "_Presentation": {
      "type": "object",
      "description": "Presentation and hardware requirements",
      "properties": {
        "PresentedWith": {
          "type": "string",
          "description": "Software/hardware used for presentation"
        },
        "RequiredScreenSize": {
          "type": "array",
          "items": { "type": "integer", "minimum": 1 },
          "minItems": 2,
          "maxItems": 2,
          "description": "Minimum screen resolution required [width, height]"
        },
        "ViewingDistance": {
          "type": "number",
          "minimum": 0,
          "description": "Recommended viewing distance in cm"
        },
        "FullscreenRequired": {
          "type": "boolean",
          "description": "Whether fullscreen presentation is required"
        },
        "AudioRequired": {
          "type": "boolean",
          "description": "Whether audio playback is required"
        },
        "CalibrationRequired": {
          "type": "boolean",
          "description": "Whether screen/color calibration is required"
        }
      }
    },
    "_Metadata": {
      "type": "object",
      "description": "Administrative metadata",
      "properties": {
        "Creator": {
          "type": "string",
          "description": "Person/institution who created/owns this stimulus"
        },
        "CreationDate": {
          "type": "string",
          "format": "date",
          "description": "Date when stimulus was created (YYYY-MM-DD)"
        },
        "LastModified": {
          "type": "string",
          "format": "date-time",
          "description": "Last modification timestamp"
        },
        "Version": {
          "type": "string",
          "description": "Version of this stimulus"
        },
        "License": {
          "type": "string",
          "enum": ["CC0", "CC-BY", "CC-BY-SA", "proprietary", "restricted"],
          "description": "Usage license"
        },
        "AccessLevel": {
          "type": "string",
          "enum": ["public", "institutional", "restricted", "private"],
          "description": "Access level for this stimulus"
        },
        "CopyrightInfo": {
          "type": "string",
          "description": "Copyright information for the movie content"
        }
      },
      "required": ["Creator", "CreationDate"]
    }
  },
  "required": ["_Technical", "_Study", "_Categories", "_Metadata"]
}
