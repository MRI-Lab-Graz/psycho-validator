{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mri-lab-graz.github.io/psycho-validator/schemas/mri/func.schema.json",
  "title": "BIDS MRI Func",
  "description": "Minimal schema for BIDS fMRI",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "Modality": {"type": "string", "enum": ["MR"]},
    "TaskName": {"type": "string"},
    "RepetitionTime": {"type": "number", "minimum": 0.1},
    "EchoTime": {"type": "number", "minimum": 0},
    "SliceTiming": {"type": "array", "items": {"type": "number"}},
    "PhaseEncodingDirection": {"type": "string", "enum": ["i", "i-", "j", "j-", "k", "k-"]}
  },
  "required": ["Modality", "TaskName", "RepetitionTime", "EchoTime"]
}
