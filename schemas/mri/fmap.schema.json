{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mri-lab-graz.github.io/psycho-validator/schemas/mri/fmap.schema.json",
  "title": "BIDS MRI Fieldmap",
  "description": "Minimal schema for BIDS field maps",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "Modality": {"type": "string", "enum": ["MR"]},
    "Units": {"type": "string", "enum": ["Hz", "rad/s"]},
    "EchoTime1": {"type": "number", "minimum": 0},
    "EchoTime2": {"type": "number", "minimum": 0}
  },
  "required": ["Modality"]
}
