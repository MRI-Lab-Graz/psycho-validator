{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mri-lab-graz.github.io/psycho-validator/schemas/mri/anat.schema.json",
  "title": "BIDS MRI Anat",
  "description": "Minimal schema for BIDS MRI anatomical images",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "Modality": {"type": "string", "enum": ["MR"]},
    "MagneticFieldStrength": {"type": "number", "minimum": 0.5, "maximum": 10},
    "Manufacturer": {"type": "string"},
    "ManufacturersModelName": {"type": "string"},
    "RepetitionTime": {"type": "number", "minimum": 0},
    "EchoTime": {"type": "number", "minimum": 0},
    "InversionTime": {"type": "number", "minimum": 0},
    "FlipAngle": {"type": "number", "minimum": 0, "maximum": 180},
    "TaskName": {"type": "string"}
  },
  "required": ["Modality", "Manufacturer", "ManufacturersModelName", "RepetitionTime", "EchoTime"]
}
