{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mri-lab-graz.github.io/psycho-validator/schemas/mri/dwi.schema.json",
  "title": "BIDS MRI DWI",
  "description": "Minimal schema for BIDS diffusion MRI",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "Modality": {"type": "string", "enum": ["MR"]},
    "PhaseEncodingDirection": {"type": "string", "enum": ["i", "i-", "j", "j-", "k", "k-"]},
    "EffectiveEchoSpacing": {"type": "number", "minimum": 0},
    "TotalReadoutTime": {"type": "number", "minimum": 0}
  },
  "required": ["Modality"]
}
